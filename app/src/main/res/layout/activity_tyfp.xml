<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for playing!"
        android:id="@+id/thankText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:textColor="@color/stifDev_TAP_Text"
        android:textSize="35sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textColor="@color/stifDev_TAP_Text"
        android:id="@+id/homeButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/stifDev_TAP_Text"
        android:id="@+id/btnFacebook"
        android:textSize="35sp"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnTwitter"
        android:layout_toStartOf="@+id/btnTwitter"
        android:layout_marginRight="40sp"/>

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/stifDev_TAP_Text"
        android:id="@+id/btnTwitter"
        android:textSize="35sp"
        android:layout_alignBottom="@+id/btnFacebook"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/stifDev_TAP_Text"
        android:id="@+id/btnGplus"
        android:textSize="35sp"
        android:layout_alignTop="@+id/btnTwitter"
        android:layout_toRightOf="@+id/btnTwitter"
        android:layout_toEndOf="@+id/btnTwitter"
        android:layout_marginLeft="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Had fun? Tell your friends!"
        android:textStyle="italic"
        android:textColor="@color/stifDev_TAP_Text"
        android:id="@+id/shareTxt"
        android:layout_above="@+id/btnTwitter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"/>
</RelativeLayout>