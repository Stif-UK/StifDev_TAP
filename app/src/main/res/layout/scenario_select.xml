<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity"
    android:background="@color/dim_foreground_material_light"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your adventure!"
        android:id="@+id/scenarioSellectTitle"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_marginTop="71dp"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Arklay"
        android:id="@+id/projectArkley"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_marginTop="147dp"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_below="@+id/appTitle_subheading"
        android:layout_centerHorizontal="true"
        android:onClick="setContentView"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More coming soon"
        android:id="@+id/scenario2"
        android:textColor="@color/abc_search_url_text"
        android:layout_marginTop="200dp"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_below="@+id/appTitle_subheading"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="italic" />

</RelativeLayout>
